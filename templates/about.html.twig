            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animations au défilement
        function checkVisible(elm) {
            var rect = elm.getBoundingClientRect();
            var viewHeight = Math.max(document.documentElement.clientHeight, window.innerHeight);
            return !(rect.bottom < 0 || rect.top - viewHeight >= 0);
        }
        
        function scanForVisibleSections() {
            // Animer les cartes d'équipe
            document.querySelectorAll('.team-card').forEach(function(card, index) {
                if (checkVisible(card)) {
                    setTimeout(function() {
                        card.style.opacity = 1;
                        card.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
            
            // Animer les valeurs
            document.querySelectorAll('.value-item').forEach(function(item, index) {
                if (checkVisible(item)) {
                    setTimeout(function() {
                        item.style.opacity = 1;
                        item.style.transform = 'translateX(0)';
                    }, index * 100);
                }
            });
        }
        
        // Initialiser les styles pour l'animation d'entrée
        document.querySelectorAll('.team-card').forEach(function(card) {
            card.style.opacity = 0;
            card.style.transform = 'translateY(50px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });
        
        document.querySelectorAll('.value-item').forEach(function(item) {
            item.style.opacity = 0;
            item.style.transform = 'translateX(-20px)';
            item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        });
        
        // Lancer l'analyse au chargement et au défilement
        scanForVisibleSections();
        window.addEventListener('scroll', scanForVisibleSections);
        
        // Animation au survol des cartes d'équipe
        const teamCards = document.querySelectorAll('.team-card');
        
        teamCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                const avatar = this.querySelector('.team-avatar');
                avatar.style.transform = 'translateX(-50%) scale(1.1)';
                avatar.style.transition = 'transform 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                const avatar = this.querySelector('.team-avatar');
                avatar.style.transform = 'translateX(-50%) scale(1)';
            });
        });
        
        // Animation d'apparition du header
        const headerSection = document.querySelector('.header-section');
        headerSection.style.opacity = 0;
        headerSection.style.transform = 'translateY(-20px)';
        headerSection.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        
        setTimeout(function() {
            headerSection.style.opacity = 1;
            headerSection.style.transform = 'translateY(0)';
        }, 300);
        
        // Animer le contenu de la mission avec un décalage
        const missionText = document.querySelectorAll('.mission-text');
        missionText.forEach((text, index) => {
            text.style.opacity = 0;
            text.style.transform = 'translateY(20px)';
            text.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            
            setTimeout(() => {
                text.style.opacity = 1;
                text.style.transform = 'translateY(0)';
            }, 500 + index * 200);
        });
    });
</script>
{% endblock %}
