{% extends 'baseNotLogged.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-image: url('https://source.unsplash.com/random/1920x1080/?abstract,dark');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
    }
    
    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(30, 21, 42, 0.75);
        z-index: -1;
    }
    
    .register-container {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        width: 100%;
        max-width: 900px;
        display: flex;
    }
    
    .register-form {
        padding: 40px;
        flex: 1;
    }
    
    .logo-container {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        background-color: #1E152A;
        position: relative;
    }
    
    .logo {
        max-width: 80%;
        transform-origin: center;
    }
    
    h1 {
        color: #1E152A;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }
    
    .form-control, .form-select {
        padding: 15px;
        margin-bottom: 15px;
        border: 1px solid rgba(30, 21, 42, 0.2);
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #1E152A;
        box-shadow: 0 0 0 0.25rem rgba(30, 21, 42, 0.25);
    }
    
    .form-label {
        color: #1E152A;
        font-weight: 600;
    }
    
    .form-check-input:checked {
        background-color: #1E152A;
        border-color: #1E152A;
    }
    
    .btn {
        background-color: #1E152A;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 20px;
        color: white;
    }
    
    .btn:hover {
        background-color: #312244;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(30, 21, 42, 0.4);
    }
    
    .form-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: -10px;
        margin-bottom: 15px;
    }
    
    a {
        color: #1E152A;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }
    
    a:hover {
        color: #312244;
    }
    
    @media (max-width: 768px) {
        .register-container {
            flex-direction: column;
        }
        
        .logo-container {
            order: -1;
            padding: 20px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="register-container">
    <div class="register-form">
        <h1>Inscription</h1>
        
        {% if registrationForm.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="mb-3">
                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions générales', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
                {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn">S'inscrire</button>
            
            <div class="text-center mt-4">
                <p>Déjà membre ? <a href="{{ path('app_login') }}">Connexion</a></p>
            </div>
        {{ form_end(registrationForm) }}
    </div>
    
    <div class="logo-container">
        <img src="/images/logoZapFeed.png" alt="ZapFeed Logo" class="logo" id="tilting-logo">
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const logo = document.getElementById('tilting-logo');
    
    window.addEventListener('mousemove', function(e) {
        if (!logo) return;
        
        const mouseX = e.clientX / window.innerWidth;
        const mouseY = e.clientY / window.innerHeight;
        
        const tiltX = (mouseY - 0.5) * 40;
        const tiltY = (mouseX - 0.5) * 40;
        
        logo.style.transform = `perspective(800px) rotateX(${-tiltX}deg) rotateY(${tiltY}deg) scale(1.05)`;
    });
    
    document.body.addEventListener('mouseleave', function() {
        if (logo) {
            logo.style.transition = 'transform 0.5s ease';
            logo.style.transform = 'perspective(800px) rotateX(0deg) rotateY(0deg) scale(1)';
            setTimeout(() => {
                logo.style.transition = 'transform 0.1s ease';
            }, 500);
        }
    });
    
    logo.style.transition = 'transform 0.1s ease';
});
</script>
{% endblock %}
