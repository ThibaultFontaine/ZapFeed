{% extends 'baseNotLogged.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-image: url('https://t4.ftcdn.net/jpg/05/03/84/43/360_F_503844329_A39r344nkAMyBxVrk7Y75v9tlsJqKVVU.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
    }
    
    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(30, 21, 42, 0.75); /* #1E152A avec transparence */
        z-index: -1;
    }
    
    .login-container {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        width: 100%;
        max-width: 900px;
        display: flex;
    }
    
    .login-form {
        padding: 40px;
        flex: 1;
    }
    
    .logo-container {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        background-color: #1E152A;
        position: relative;
    }
    
    .logo {
        max-width: 80%;
        transition: transform 0.3s ease;
        transform-origin: center;
    }
    
    h1 {
        color: #1E152A;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }
    
    label {
        font-weight: 600;
        color: #1E152A;
        margin-top: 15px;
        display: block;
    }
    
    .form-control {
        border: 2px solid #1E152A;
        border-radius: 8px;
        padding: 12px;
        margin-top: 8px;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(30, 21, 42, 0.25);
        border-color: #1E152A;
    }
    
    .btn-primary {
        background-color: #1E152A;
        border-color: #1E152A;
        border-radius: 8px;
        padding: 12px 20px;
        margin-top: 30px;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s;
    }
    
    .btn-primary:hover, .btn-primary:focus {
        background-color: #2a1e3d;
        border-color: #2a1e3d;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(30, 21, 42, 0.4);
    }
    
    .alert {
        border-radius: 8px;
        padding: 15px;
    }
    
    .checkbox {
        margin: 20px 0;
    }
    
    .signup-link {
        text-align: center;
        margin-top: 20px;
        color: #1E152A;
    }
    
    .signup-link a {
        color: #1E152A;
        font-weight: 700;
        text-decoration: underline;
    }
    
    @media (max-width: 768px) {
        .login-container {
            flex-direction: column-reverse;
        }
        
        .logo-container {
            padding: 20px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-form">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1>Connexion</h1>
            
            <div class="mb-3">
                <label for="username">Adresse e-mail</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            <div class="mb-3">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Uncomment this section to enable remember me
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
                <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
            </div>
            #}

            <button class="btn btn-primary" type="submit">
                Se connecter
            </button>
            
            <div class="signup-link">
                Vous n'avez pas de compte ? <a href="#">S'inscrire</a>
            </div>
        </form>
    </div>
    
    <div class="logo-container">
        <img src="/images/logoZapFeed.png" alt="Logo" class="logo" id="tilting-logo">
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const logo = document.getElementById('tilting-logo');
    
    window.addEventListener('mousemove', function(e) {
        if (!logo) return;
        
        const mouseX = e.clientX / window.innerWidth;
        const mouseY = e.clientY / window.innerHeight;
        
        const tiltX = (mouseY - 0.5) * 40;
        const tiltY = (mouseX - 0.5) * 40;
        
        logo.style.transform = `perspective(800px) rotateX(${-tiltX}deg) rotateY(${tiltY}deg) scale(1.05)`;
    });
    
    document.body.addEventListener('mouseleave', function() {
        if (logo) {
            logo.style.transition = 'transform 0.5s ease';
            logo.style.transform = 'perspective(800px) rotateX(0deg) rotateY(0deg) scale(1)';
            setTimeout(() => {
                logo.style.transition = 'transform 0.1s ease';
            }, 500);
        }
    });
    
    logo.style.transition = 'transform 0.1s ease';
});
</script>

{% endblock %}
