{% extends 'base.html.twig' %}
{% block body %}
<form class="p-4 rounded shadow" style="max-width: 400px; margin: 30px auto 0; background-color: #f8f9fa;">
  <!-- Full Name input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="text" id="formRegisterName" class="form-control" style="padding: 15px; font-size: 1rem;" />
    <label class="form-label" for="formRegisterName" style="font-weight: 600;">Pseudo</label>
  </div>

  <!-- Email input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="email" id="formRegisterEmail" class="form-control" style="padding: 15px; font-size: 1rem;" />
    <label class="form-label" for="formRegisterEmail" style="font-weight: 600;">Email</label>
  </div>

  <!-- Password input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="password" id="formRegisterPassword" class="form-control" style="padding: 15px; font-size: 1rem;" />
    <label class="form-label" for="formRegisterPassword" style="font-weight: 600;">Mot de passe</label>
  </div>

  <!-- Confirm Password input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="password" id="formRegisterPasswordConfirm" class="form-control" style="padding: 15px; font-size: 1rem;" />
    <label class="form-label" for="formRegisterPasswordConfirm" style="font-weight: 600;">Confirmer le mot de passe</label>
  </div>

  <!-- Row for checkbox -->
  <div class="row mb-4">
    <div class="col d-flex align-items-center">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="formRegisterTerms" />
        <label class="form-check-label" for="formRegisterTerms" style="font-size: 0.9rem;">
          J'accepte les <a href="#!" style="text-decoration: none; color: #0d6efd;">conditions générales</a>
        </label>
      </div>
    </div>
  </div>

  <!-- Submit button -->
  <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="padding: 10px 20px; font-weight: 600; font-size: 1rem; border-radius: 5px;">
    S'inscrire
  </button>

  <!-- Login link -->
  <div class="text-center">
    <p style="font-size: 0.9rem;">Déjà membre ? <a href="/login" style="text-decoration: none; font-weight: 500; color: #0d6efd;">Connexion</a></p>
  </div>
</form>
{% endblock %}