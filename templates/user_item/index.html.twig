{% extends 'base.html.twig' %}

{% block title %}Mes articles likés{% endblock %}

{% block body %}
    <h1>Mes articles ❤️ likés</h1>

    {% if user_items is empty %}
        <div class="alert alert-info">
            Vous n'avez pas encore liké d'article.
        </div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>URL</th>
                    {# <th>Feed</th> #}
                    {# <th>Créé le</th> #}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user_item in user_items %}
                    <tr>
                        <td>{{ user_item.item.title }}</td>
                        <td>
                            <a href="{{ user_item.item.url }}" target="_blank">
                                {{ user_item.item.url }}
                            </a>
                        </td>
                        {# <td>{{ user_item.item.feed.title }}</td> #}
                        {# <td>{{ user_item.createdAt|date('Y-m-d H:i') }}</td> #}
                        <td>
                            <a href="{{ path('app_user_item_show', {
                                feedId: user_item.item.feed.id,
                                itemId: user_item.item.id
                            }) }}" class="btn btn-sm btn-outline-primary">
                                Voir
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
