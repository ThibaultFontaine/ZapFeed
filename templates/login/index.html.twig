{% extends 'base.html.twig' %}
{% block body %}
<form class="p-4 rounded shadow" style="max-width: 400px; margin: 30px auto 0; background-color: #f8f9fa;" action="{{ path('login') }}" method="post">
  <!-- Email input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="text" id="username" class="form-control" style="padding: 15px; font-size: 1rem;" value="{{ last_username }}" required/>
    <label class="form-label" for="username" style="font-weight: 600;">Username</label>
  </div>

  <!-- Password input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <input type="password" id="password" class="form-control" style="padding: 15px; font-size: 1rem;" name="_password" required/>
    <label class="form-label" for="password" style="font-weight: 600;">Mot de passe</label>
  </div>

  <!-- Row for checkbox and link -->
  <div class="row mb-4">
    <div class="col d-flex align-items-center">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31" style="font-size: 0.9rem;"> Se souvenir de moi ! </label>
      </div>
    </div>
    <div class="col text-end">
      <a href="#!" style="text-decoration: none; font-weight: 500; color: #0d6efd;">Mot de passe oubli√© ?</a>
    </div>
  </div>

  <!-- Submit button -->
  <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="padding: 10px 20px; font-weight: 600; font-size: 1rem; border-radius: 5px;">
    Connexion
  </button>

  <!-- Register section -->
  <div class="text-center">
    <p style="font-size: 0.9rem;">Pas encore membre ? <a href="/register" style="text-decoration: none; font-weight: 500; color: #0d6efd;">Inscription</a></p>
  </div>
</form>


{% endblock %}